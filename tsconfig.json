{
  "compilerOptions": {
    /* Basic Options */
    // "incremental": true,                   
    /* Enable incremental compilation */
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true, 
    "esModuleInterop": true,                  
    "forceConsistentCasingInFileNames": true  
  },
  "exclude": [
    "node_modules/*"
  ],
  "include": [
      "src/**/*"
  ]
}
